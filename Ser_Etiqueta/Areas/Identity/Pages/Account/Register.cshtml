@page
@model RegisterModel

@{
    ViewData["Title"] = "Registrar";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-4">

            <h4>Crear nueva cuenta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.idEmpresa">Empresa</label>
                <select class="form-control select2bs4" style="width: 100%;" id=idEmpresa asp-for="Input.idEmpresa" onchange="getSucursal(this.value)">
                    @*<option value="0" selected>No tiene</option>*@
                    @foreach (var Empresa in Model.p)
                    {
                        <option value="@Empresa.IdEmpresa ">@Empresa.NombreComercial</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Input.idSucursal">Sucursal</label>
                <select class="form-control select2bs4" style="width: 100%;" id=idSucursal asp-for="Input.idSucursal" value="">
                    @*<option value="0" selected>No tiene</option>*@
                </select>
            </div>


        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Complete el formulario</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
            </section>
        </div>
    </div>
</form>
<script type="text/javascript">

    var urlGetEmpresa = "@Url.Action("getSucursales", "Sucursal")";;
  //  console.log( @Html.Raw(Json.Serialize(Model.p)))
</script>
<script src="~/adminlte/js/Register.js"></script>

