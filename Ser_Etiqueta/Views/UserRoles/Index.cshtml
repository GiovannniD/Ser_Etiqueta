@using Ser_Etiqueta.Models
@model List<Ser_Etiqueta.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Administrar Roles";
   // Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>
<table class="table table-striped" id="Roles">
    <thead>
        <tr>
            <th>Nombres </th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Empresa</th>
            <th>Sucursal</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Empresa</td>
            <td>@user.Sucursal</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script src="~/adminlte/js/Roles.js"></script>